{
  "bracket-pair-colorizer-2.showBracketsInGutter": true,
  "bracket-pair-colorizer-2.colors": ["Orange", "PaleVioletRed", "PeachPuff"],
  "editor.fontFamily": "Hack, Fira Code",
  "editor.fontLigatures": false,
  "[python]": {
    "editor.rulers": [100]
  },
  "telemetry.enableCrashReporter": false,
  "telemetry.enableTelemetry": false,
  "workbench.sideBar.location": "left",
  "extensions.ignoreRecommendations": true,
  "editor.renderLineHighlight": "gutter",
  "editor.occurrencesHighlight": false,
  "editor.formatOnPaste": true,
  "editor.formatOnSave": true,
  "editor.mouseWheelZoom": true,
  "workbench.editor.highlightModifiedTabs": true,
  "terminal.integrated.shell.windows": "C:\\WINDOWS\\System32\\WindowsPowerShell\\v1.0\\powershell.exe",
  "editor.renderWhitespace": "selection",
  "editor.minimap.enabled": false,
  "editor.suggestSelection": "first",
  "editor.cursorBlinking": "phase",
  "editor.acceptSuggestionOnEnter": "off",
  "explorer.sortOrder": "type",
  "vsintellicode.modify.editor.suggestSelection": "automaticallyOverrodeDefaultValue",
  "http.proxyStrictSSL": false,
  "[html]": {
    "editor.defaultFormatter": "vscode.html-language-features"
  },
  "workbench.startupEditor": "newUntitledFile",
  "workbench.iconTheme": "vscode-icons",
  "python.languageServer": "Pylance",
  "python.pythonPath": "/usr/bin/python3",
  "vsicons.dontShowNewVersionMessage": true,

  // Files
  "files.insertFinalNewline": true,
  "files.exclude": {
    "**/.git": true,
    "**/.DS_Store": true,
    "**/__pycache__": true,
    "**/**/*.pyc": true
  },
  "workbench.colorTheme": "Default Dark+",
  "workbench.colorCustomizations": {
    "statusBar.background": "#1b1b1b"
  },
  "python.showStartPage": false,
  "settingsSync.ignoredSettings": [
    "workbench.colorTheme"
  ]

  // Currently unused settings
  //"python.jediEnabled": false
  //"vim.cursorStylePerMode.insert": "line",
  //"vim.cursorStylePerMode.normal": "block",
  //"vim.cursorStylePerMode.visual": "block-outline",
  //"vim.cursorStylePerMode.visualblock": "block-outline",
  //"vim.cursorStylePerMode.visualline": "block-outline",
  //"workbench.settings.editor": "json",  // Always open settings in JSON editor
  //"workbench.settings.openDefaultSettings": true,
}
